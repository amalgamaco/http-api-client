{
	"name": "@amalgamaco/http-api-client",
	"version": "1.0.7",
	"description": "An abstraction for establishing connections with HTTP APIs, supporting OAuth2 authentication with refresh tokens and other minor features.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "tsc",
		"lint": "eslint src/",
		"test": "JEST_JUNIT_OUTPUT_DIR=reports jest",
		"release": "release-it"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:amalgamaco/http-api-client.git"
	},
	"keywords": [
		"api",
		"client",
		"http",
		"oauth",
		"refresh token"
	],
	"author": "Dami√°n Huaier",
	"license": "ISC",
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	},
	"dependencies": {
		"@types/qs": "^6.9.7",
		"axios": "^0.27.2",
		"js-base64": "^3.7.2",
		"qs": "^6.11.0"
	},
	"devDependencies": {
		"@types/jest": "^28.1.6",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"eslint": "^7.32.0 || ^8.2.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-typescript": "^3.2.7",
		"eslint-plugin-import": "^2.25.2",
		"jest": "^28.1.3",
		"jest-junit": "^14.0.0",
		"release-it": "^15.1.2",
		"ts-jest": "^28.0.7",
		"typescript": "^4.7.4"
	},
	"jest": {
		"collectCoverage": true,
		"coverageDirectory": "<rootDir>/reports/coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"text-summary",
			"cobertura"
		],
		"reporters": [
			"default",
			"jest-junit"
		],
		"setupFiles": [
			"<rootDir>/config/setupTests.js"
		],
		"testMatch": [
			"<rootDir>/tests/**/?(*.)(spec|test).ts"
		],
		"transform": {
			"^.+\\.jsx?$": "ts-jest"
		},
		"preset": "ts-jest"
	},
	"release-it": {
		"git": {
			"tagName": "v${version}",
			"requireCleanWorkingDir": false,
			"requireUpstream": true,
			"commitMessage": "Release v${version}",
			"changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --issue-url https://github.com/amalgamaco/http-api-client/issues/{id} --merge-url https://github.com/amalgamaco/http-api-client/pull/{id} --commit-url https://github.com/amalgamaco/http-api-client/commit/{id}"
		},
		"hooks": {
			"after:bump": "npx auto-changelog -p"
		},
		"github": {
			"release": true,
			"releaseName": "Release v${version}"
		},
		"npm": {
			"skipChecks": true
		}
	}
}
